<!DOCTYPE html>
<html lang="pt-br">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório Financeiro</title>
    <style>
      body {
        background-color: #d5e5f5;
        font-family: Arial, sans-serif;
        color: #333333;
      }

      h1,h2 {
        color: #08bd80;
        text-align: center;
      }

      table {
        margin: 0 auto;
        border-collapse: collapse;
        width: 80%;
        border: 2px solid #08bd80;
      }

      th {
        background-color: #08bd80;
        color: #ffffff;
        padding: 10px;
        text-align: center;
      }

      td {
        padding: 10px;
        text-align: center;
        border: 1px solid #08bd80;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <% for( let index = 0; index < data.length; index++ ) { %>
    <h1>Relatório Financeiro</h1>
    <h2>Cliente: <%= data[index].User.name %></h2>
    <table>
      <tr>
        <th>Data</th>
        <th>Saldo Atual</th>
        <th>Saldo Anterior</th>
        <th>Quantia</th>
        <th>Operação</th>
      </tr>       
            <% data[index].transactions.forEach(element => { %>
              <tr>
                <td><%= element.createdAt %></td>
                <td><%= element.balance %></td>
                <td><%= element.previousBalance %></td>
                <td><%= element.amount %></td>
                <td><%= element.type %></td>
              </tr>
            <% }) %>
        <% } %>

      </tr>
    </table>
  </body>
</html>
